@page "{id?}"
@model project.Pages.TravelPlanner.ResultModel
@{
    ViewData["Title"] = "Your Travel Plan";
    var plan = Model.TravelPlan;
    var planId = Model.PlanId ?? (Model.RouteData.Values["id"] as string);
}


@if (plan == null)
{
    <div class="alert alert-warning">No travel plan data was found. Please create a new plan.</div>
    <p><a asp-page="Index" class="btn btn-primary">Back to planner</a></p>
}
else
{
    var days = (plan.EndDate - plan.StartDate).Days + 1;
    var perPersonPerDay = plan.NumberOfTravelers > 0 && days > 0
        ? plan.Budget / plan.NumberOfTravelers / days
        : 0;

    <!-- Destination Hero Image -->
    @if (!string.IsNullOrEmpty(plan?.DestinationImageUrl))
    {
        <!-- Mobile: Simple image with header below -->
        <div class="mb-3 d-md-none hero-image">
            <img src="@plan.DestinationImageUrl" alt="@plan.Destination" 
                 class="img-fluid rounded w-100" 
                 style="max-height: 200px; object-fit: cover;" />
        </div>
        
        <!-- Desktop: Image with overlay -->
        <div class="mb-3 mb-md-4 position-relative d-none d-md-block hero-image">
            <img src="@plan.DestinationImageUrl" alt="@plan.Destination" 
                 class="img-fluid rounded w-100" 
                 style="max-height: 300px; object-fit: cover;" />
            <div class="position-absolute bottom-0 start-0 end-0 bg-dark bg-opacity-50 text-white p-2 p-md-3 rounded-bottom">
                <h1 class="mb-0 fs-2 fs-md-1" style="text-transform: capitalize;">@plan?.Destination</h1>
                <div class="d-flex gap-2 flex-wrap align-items-center mt-2">
                    <span class="badge text-bg-primary">@days days</span>
                    <span class="badge text-bg-secondary d-none d-sm-inline">@plan?.NumberOfTravelers traveler@((plan?.NumberOfTravelers ?? 0) == 1 ? "" : "s")</span>
                    <span class="badge text-bg-secondary d-inline d-sm-none">@(plan?.NumberOfTravelers ?? 0) üë•</span>
                    <span class="badge text-bg-success">$@perPersonPerDay.ToString("F0")<span class="d-none d-sm-inline">/person/day</span><span class="d-inline d-sm-none">/p/d</span></span>
                    <button type="button" class="btn btn-link p-0 save-heart-btn" id="savePlanBtn" data-plan-id="@planId" data-is-saved="@Model.IsSaved.ToString().ToLower()" title="@(Model.IsSaved ? "Click to unsave" : "Save to favorites")">
                        <i class="bi bi-heart fs-4 text-white @(Model.IsSaved ? "d-none" : "")" id="heartOutline"></i>
                        <i class="bi bi-heart-fill fs-4 text-danger @(Model.IsSaved ? "" : "d-none")" id="heartFill"></i>
                        <span class="spinner-border spinner-border-sm ms-1" role="status" aria-hidden="true" style="display: none;" id="savePlanSpinner"></span>
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Simple header (mobile when image exists, always when no image) -->
    <header class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3 @(!string.IsNullOrEmpty(plan?.DestinationImageUrl) ? "d-md-none" : "")">
        <h1 class="mb-0 fs-4 fs-md-2" style="text-transform: capitalize;">@plan?.Destination</h1>
        <div class="d-flex gap-2 flex-wrap align-items-center">
            <span class="badge text-bg-primary">@days days</span>
            <span class="badge text-bg-secondary d-none d-sm-inline">@plan?.NumberOfTravelers traveler@((plan?.NumberOfTravelers ?? 0) == 1 ? "" : "s")</span>
            <span class="badge text-bg-secondary d-inline d-sm-none">@(plan?.NumberOfTravelers ?? 0) üë•</span>
            <span class="badge text-bg-success">$@perPersonPerDay.ToString("F0")<span class="d-none d-sm-inline">/person/day</span><span class="d-inline d-sm-none">/p/d</span></span>
            <button type="button" class="btn btn-link p-0 save-heart-btn" id="savePlanBtnMobile" data-plan-id="@planId" data-is-saved="@Model.IsSaved.ToString().ToLower()" title="@(Model.IsSaved ? "Click to unsave" : "Save to favorites")">
                <i class="bi bi-heart fs-4 text-secondary @(Model.IsSaved ? "d-none" : "")"></i>
                <i class="bi bi-heart-fill fs-4 text-danger @(Model.IsSaved ? "" : "d-none")"></i>
                <span class="spinner-border spinner-border-sm ms-1" role="status" aria-hidden="true" style="display: none;"></span>
            </button>
        </div>
    </header>

    <hr class="my-3" />

    <!-- Desktop navigation tabs (mobile has bottom navbar) -->
    <nav class="mb-3 d-none d-md-flex gap-2 flex-wrap main-tabs" role="tablist" aria-label="Plan views">
        <button type="button" data-tab="plan" aria-selected="true" class="btn btn-outline-primary btn-sm flex-md-grow-0" style="min-height: 48px;">Plan</button>
        <button type="button" data-tab="map" aria-selected="false" class="btn btn-outline-primary btn-sm flex-md-grow-0" style="min-height: 48px;">Map</button>
        <button type="button" data-tab="details" aria-selected="false" class="btn btn-outline-primary btn-sm flex-md-grow-0" style="min-height: 48px;">Details</button>
    </nav>

    <section id="tab-plan" data-tab-panel style="padding-top: 0;">
        <div class="d-flex justify-content-end gap-2 mb-3">
            <button type="button" class="btn btn-sm btn-outline-secondary" id="expandAllBtn" style="min-height: 36px;">Expand all</button>
            <button type="button" class="btn btn-sm btn-outline-secondary" id="collapseAllBtn" style="min-height: 36px;">Collapse all</button>
        </div>

        @if (Model.ParsedDays.Count == 0)
        {
            <pre id="itineraryText" class="bg-light p-2 p-md-3 rounded border small">@Model.VisibleItinerary</pre>
        }
        else
        {
            <div id="daysContainer">
                @for (var i = 0; i < Model.ParsedDays.Count; i++)
                {
                    var d = Model.ParsedDays[i];
                    <details class="mb-3 border rounded" open>
                        <summary class="fw-semibold p-2 p-md-3 bg-light" style="cursor: pointer; min-height: 44px; display: flex; align-items: center;">Day @d.Day @if(!string.IsNullOrWhiteSpace(d.Date)){<text>- @d.Date</text>}</summary>
                        <div class="p-2 p-md-3">
                            @foreach (var line in d.Lines)
                            {
                                if (string.IsNullOrWhiteSpace(line))
                                {
                                    <div class="mb-1"></div>
                                }
                                else if (line.TrimStart().StartsWith("üåÖ") || line.TrimStart().StartsWith("‚òÄÔ∏è") || line.TrimStart().StartsWith("üåÜ"))
                                {
                                    <h6 class="mt-3 mb-2 text-primary">@line</h6>
                                }
                                else if (line.TrimStart().StartsWith("üìç"))
                                {
                                    <div class="ms-2 mb-1"><strong>@line</strong></div>
                                }
                                else if (line.TrimStart().StartsWith("ÔøΩ"))
                                {
                                    <div class="ms-3 mb-1 text-secondary" style="font-size: 0.95rem;">@line</div>
                                }
                                else if (line.TrimStart().StartsWith("‚ÑπÔ∏è"))
                                {
                                    <div class="ms-3 mb-1" style="font-size: 0.9rem;">@line</div>
                                }
                                else
                                {
                                    <div class="ms-2 mb-1">@line</div>
                                }
                            }
                        </div>
                    </details>
                }
            </div>
        }

            <details class="mt-3 border rounded">
            <summary class="fw-semibold p-2 p-md-3 bg-light" style="cursor: pointer; min-height: 44px; display: flex; align-items: center;">Edit itinerary</summary>
            <form method="post" asp-page-handler="UpdateItinerary" asp-route-id="@planId" class="mt-2 p-2 p-md-3" id="itineraryForm">
                <div class="position-sticky top-0 bg-white py-2 z-1 border-bottom mb-2 d-flex gap-1 gap-md-2 flex-wrap align-items-center">
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="btnDay" style="min-height: 36px;">+ Day</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="btnList" style="min-height: 36px;">‚Ä¢ List</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="btnBold" style="min-height: 36px;"><strong>B</strong></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="btnItalic" style="min-height: 36px;"><em>I</em></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="btnPreview" style="min-height: 36px;">Preview</button>
                    <span class="ms-auto small text-muted" id="charCount"></span>
                </div>

                <div class="row g-2 g-md-3">
                    <div class="col-12 col-lg-6">
                            <textarea name="updatedItinerary" id="itineraryEditor" rows="12" class="form-control small" style="font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace; white-space: pre;">@Model.VisibleItinerary</textarea>
                        </div>
                    <div class="col-12 col-lg-6">
                        <div id="itineraryPreview" class="border rounded p-2 bg-light small" style="min-height: 200px; display:block"></div>
                    </div>
                </div>

                    <div class="mt-2 mt-md-3 d-flex gap-2 flex-wrap">
                    <button type="submit" class="btn btn-primary flex-fill flex-sm-grow-0" id="btnSave" style="min-height: 44px;">
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true" style="display: none;" id="btnSaveSpinner"></span>
                        <span id="btnSaveText">Save changes</span>
                    </button>
                    <button type="submit" formaction="?handler=ResetItinerary&id=@planId" class="btn btn-outline-secondary flex-fill flex-sm-grow-0" id="btnReset" style="min-height: 44px;">
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true" style="display: none;" id="btnResetSpinner"></span>
                        <span id="btnResetText"><span class="d-none d-sm-inline">Reset to AI version</span><span class="d-inline d-sm-none">Reset</span></span>
                    </button>
                </div>
            </form>
        </details>
    </section>

    <!-- PLAN DATA FOR CLIENT-SIDE SCRIPTS -->
    <script id="travel-plan-data" type="application/json">@Html.Raw(System.Text.Json.JsonSerializer.Serialize(new {
        id = planId,
        destination = plan?.Destination ?? string.Empty,
        startDate = plan?.StartDate ?? DateTime.MinValue,
        endDate = plan?.EndDate ?? DateTime.MinValue,
        numberOfTravelers = plan?.NumberOfTravelers ?? 0,
        budget = plan?.Budget ?? 0,
        travelPreferences = plan?.TravelPreferences,
        accommodations = (plan?.Accommodations ?? new List<string>()),
        activities = (plan?.Activities ?? new List<string>()),
        transportation = (plan?.Transportation ?? new List<string>()),
        generatedItinerary = plan?.GeneratedItinerary ?? string.Empty,
        createdAt = plan?.CreatedAt ?? DateTime.MinValue,
    parsedDays = (Model.ParsedDays?.Select(d => new { day = d.Day, date = d.Date, lines = d.Lines }).ToArray()) ?? Array.Empty<object>()
    }, new System.Text.Json.JsonSerializerOptions { WriteIndented = false }))</script>
    @Html.AntiForgeryToken()

    <section id="tab-map" data-tab-panel hidden>
        <!-- Map full width -->
        <div class="mb-3">
            <div id="plan-map" data-map-container class="bg-light rounded border position-relative result-map" style="width: 100%;">
                <!-- Map loading indicator -->
                <div id="map-loading" class="position-absolute top-50 start-50 translate-middle text-center" style="z-index: 1;">
                    <div class="spinner-border text-primary mb-2" role="status">
                        <span class="visually-hidden">Loading map...</span>
                    </div>
                    <div class="small text-muted">Loading map...</div>
                </div>
            </div>
        </div>

        <!-- Day filter bar below map -->
        <div class="mb-2 mb-md-3">
            <div class="day-filter-bar overflow-x-auto text-nowrap pb-2">
                <div id="map-controls" class="d-flex gap-2 justify-content-center flex-wrap"></div>
            </div>
        </div>
    </section>

    <section id="tab-details" data-tab-panel hidden>
        <h2 class="h4">Summary</h2>
        <div class="row g-3">
            <div class="col-sm-6 col-lg-4"><div class="p-2 bg-light rounded border">Dates: @plan?.StartDate.ToString("MMM dd, yyyy") - @plan?.EndDate.ToString("MMM dd, yyyy") (@days days)</div></div>
            <div class="col-sm-6 col-lg-4"><div class="p-2 bg-light rounded border">Travelers: @(plan?.NumberOfTravelers ?? 0)</div></div>
            <div class="col-sm-6 col-lg-4"><div class="p-2 bg-light rounded border">Budget: $@(plan?.Budget ?? 0) (@perPersonPerDay.ToString("F0") per person per day)</div></div>
        </div>
    @if (!string.IsNullOrWhiteSpace(plan?.TravelPreferences))
        {
            <p class="mt-3">Preferences: @plan?.TravelPreferences</p>
        }
    @if ((plan?.Accommodations) != null && plan.Accommodations.Count > 0)
        {
            <h3 class="h5 mt-3">Accommodations</h3>
            <ul class="list-group">
                @foreach (var item in plan.Accommodations) { <li class="list-group-item">@item</li> }
            </ul>
        }
    @if ((plan?.Activities) != null && plan.Activities.Count > 0)
        {
            <h3 class="h5 mt-3">Activities</h3>
            <ul class="list-group">
                @foreach (var item in plan.Activities) { <li class="list-group-item">@item</li> }
            </ul>
        }
    @if ((plan?.Transportation) != null && plan.Transportation.Count > 0)
        {
            <h3 class="h5 mt-3">Transportation</h3>
            <ul class="list-group">
                @foreach (var t in plan.Transportation) { <li class="list-group-item">@t</li> }
            </ul>
        }
        <details class="mt-3">
            <summary class="fw-semibold">Edit details</summary>
            <form id="detailsForm" method="post" asp-page-handler="UpdateDetails" asp-route-id="@planId" class="mt-3">
                <div class="row g-3">
                    <div class="col-sm-6 col-md-3">
                        <label class="form-label">Start</label>
                        <input type="date" name="startDate" value="@plan?.StartDate.ToString("yyyy-MM-dd")" class="form-control" @(Model.IsProcessing?"disabled":"") />
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <label class="form-label">End</label>
                        <input type="date" name="endDate" value="@plan?.EndDate.ToString("yyyy-MM-dd")" class="form-control" @(Model.IsProcessing?"disabled":"") />
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <label class="form-label">Travelers</label>
                        <input type="number" name="numberOfTravelers" min="1" max="20" value="@(plan?.NumberOfTravelers ?? 0)" class="form-control" @(Model.IsProcessing?"disabled":"") />
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <label class="form-label">Budget (USD)</label>
                        <input type="number" name="budget" min="0" step="1" value="@(plan?.Budget ?? 0)" class="form-control" @(Model.IsProcessing?"disabled":"") />
                    </div>
                </div>

                <hr />

                <div class="mb-3">
                    <label class="form-label">Additional preferences</label>
                    <textarea name="travelPreferences" class="form-control" rows="2" @(Model.IsProcessing?"disabled":"")>@(plan?.TravelPreferences)</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Accommodations (one per line)</label>
                    <textarea name="accommodations" class="form-control" rows="3" @(Model.IsProcessing?"disabled":"")>@string.Join("\n", plan?.Accommodations ?? new List<string>())</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Activities (one per line)</label>
                    <textarea name="activities" class="form-control" rows="3" @(Model.IsProcessing?"disabled":"")>@string.Join("\n", plan?.Activities ?? new List<string>())</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Transportation (one per line)</label>
                    <textarea name="transportation" class="form-control" rows="2" @(Model.IsProcessing?"disabled":"")>@string.Join("\n", plan?.Transportation ?? new List<string>())</textarea>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary" @(Model.IsProcessing?"disabled":"")>Save details</button>
                    <a asp-page="Result" asp-route-id="@planId" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </details>
    </section>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/%40microsoft/signalr@7.0.14/dist/browser/signalr.min.js"></script>
    <script>
        (function(){
            // REMOVE OVERLAY IF PLAN DATA PRESENT
            try {
                const overlayEarly = document.getElementById('processingOverlay');
                const hasPlanEarly = document.getElementById('travel-plan-data') != null;
                if (overlayEarly && hasPlanEarly) {
                    overlayEarly.remove();
                }
            } catch {}
            
            const isProcessing = @(Model.IsProcessing.ToString().ToLower());
            const currentId = "@(Model.PlanId ?? (Model.RouteData.Values["id"] as string) ?? string.Empty)";
            
            if (isProcessing && currentId) {
                const overlay = document.getElementById('processingOverlay');
                const statusEl = document.getElementById('processingStatus');
                const subEl = document.getElementById('processingSub');
                const hasPlanDataEarly = document.getElementById('travel-plan-data') != null;
                
                if (overlay) {
                    overlay.style.display = hasPlanDataEarly ? 'none' : 'flex';
                    overlay.style.pointerEvents = hasPlanDataEarly ? 'none' : 'auto';
                    overlay.setAttribute('aria-hidden', hasPlanDataEarly ? 'true' : 'false');
                }

                // Initialize SignalR
                const connection = new signalR.HubConnectionBuilder()
                    .withUrl("/hubs/planGeneration")
                    .withAutomaticReconnect()
                    .build();

                connection.on("ProgressUpdate", function (data) {
                    console.log("Progress update received:", data);
                    
                    // Update overlay progress bar
                    const overlayProgressBar = document.getElementById('overlayProgressBar');
                    const overlayProgressText = document.getElementById('overlayProgressText');
                    
                    if (overlayProgressBar && data.progress) {
                        overlayProgressBar.style.width = data.progress + '%';
                        overlayProgressBar.setAttribute('aria-valuenow', data.progress);
                    }
                    
                    if (overlayProgressText && data.progress) {
                        overlayProgressText.textContent = data.progress + '%';
                    }
                    
                    if (statusEl) {
                        if (data.status === 'Queued') {
                            statusEl.textContent = 'Your plan is queued for generation';
                        } else if (data.status === 'InProgress') {
                            statusEl.textContent = data.message || 'Generating your plan...';
                        } else if (data.status === 'Completed') {
                            statusEl.textContent = 'Generation complete!';
                        } else if (data.status === 'Failed') {
                            statusEl.textContent = 'Generation failed';
                        }
                    }
                    
                    if (subEl) {
                        if (data.status === 'Queued') {
                            subEl.textContent = 'Waiting for processing slot...';
                        } else if (data.status === 'InProgress') {
                            subEl.textContent = data.message || 'Processing...';
                        } else if (data.status === 'Completed') {
                            subEl.textContent = 'Redirecting...';
                        } else if (data.status === 'Failed') {
                            subEl.textContent = 'Please try again';
                        }
                    }
                    
                    // Reload page when completed or failed
                    // Reload page when completed, failed, or progress reaches 100%
                    if (data.status === 'Completed' || data.status === 'Failed' || data.progress === 100) {
                        setTimeout(() => {
                            const cleanUrl = window.location.pathname + '?id=' + encodeURIComponent(currentId);
                            window.location.href = cleanUrl;
                        }, 1000);
                    }
                });

                // NEW: Handle PlanCompleted event from backend
                connection.on("PlanCompleted", function (data) {
                    console.log("PlanCompleted event received:", data);
                    setTimeout(() => {
                        const cleanUrl = window.location.pathname + '?id=' + encodeURIComponent(currentId);
                        window.location.href = cleanUrl;
                    }, 1000);
                });

                connection.start()
                    .then(() => {
                        console.log("SignalR connected");
                        // Join the plan group
                        return connection.invoke("JoinPlanGeneration", currentId);
                    })
                    .catch(err => {
                        console.error("SignalR connection error:", err);
                        // Fallback to polling if SignalR fails
                        startPolling();
                    });

                // Fallback polling function (in case SignalR fails)
                function startPolling() {
                    let attempts = 0;
                    const poll = async () => {
                        try {
                            const res = await fetch(`?handler=Status&id=${encodeURIComponent(currentId)}`, { cache: 'no-store' });
                            if (!res.ok) throw 0;
                            const data = await res.json();
                            const s = (data.status || '').toString();
                            if (statusEl) {
                                if (s === 'Queued') statusEl.textContent = 'Your plan is queued for generation.';
                                else if (s === 'InProgress') statusEl.textContent = 'Generating your plan ‚Äî in progress.';
                                else if (s === 'Completed') statusEl.textContent = 'Generation complete ‚Äî reloading...';
                                else if (s === 'Failed') statusEl.textContent = 'Generation failed.';
                            }
                            if (subEl) {
                                if (s === 'Queued') subEl.textContent = 'Waiting for processing slot.';
                                else if (s === 'InProgress') subEl.textContent = 'This may take a minute.';
                                else subEl.textContent = '';
                            }
                            if (s !== 'Queued' && s !== 'InProgress') {
                                setTimeout(() => {
                                    const cleanUrl = window.location.pathname + '?id=' + encodeURIComponent(currentId);
                                    window.location.href = cleanUrl;
                                }, 700);
                                return;
                            }
                        } catch {}
                        if (++attempts <= 480) setTimeout(poll, 1500); // up to ~12 minutes
                    };
                    poll();
                }
            }

            // TOAST HELPER
            // Use global Toast helper if available, otherwise fallback to simple toast
            function showToast(message, variant){
                if (window.Toast) {
                    const typeMap = {
                        'success': 'success',
                        'danger': 'error',
                        'warning': 'warning',
                        'info': 'info',
                        'primary': 'info',
                        'secondary': 'info'
                    };
                    const type = typeMap[variant] || 'info';
                    Toast.show(message, type);
                } else {
                    // Fallback to simple toast
                    const cont = document.getElementById('globalToasts'); if(!cont) return;
                    const el = document.createElement('div');
                    el.className = 'toast align-items-center text-bg-' + (variant||'success') + ' border-0 show mb-2';
                    el.setAttribute('role','alert'); el.setAttribute('aria-live','assertive'); el.setAttribute('aria-atomic','true');
                    el.innerHTML = '<div class="d-flex"><div class="toast-body">'+message+'</div><button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button></div>';
                    cont.appendChild(el);
                    setTimeout(()=>{ el.remove(); }, 3500);
                }
            }
            
            const url = new URL(window.location.href);
            const ok = url.searchParams.get('ok');
            if(ok==='saved') showToast('Itinerary saved.','success');
            if(ok==='reset') showToast('Itinerary reset to AI version.','secondary');

            // SAVE PLAN BUTTON - HEART TOGGLE (Save/Unsave)
            const saveHeartButtons = document.querySelectorAll('.save-heart-btn');
            saveHeartButtons.forEach(btn => {
                btn.addEventListener('click', async function(e) {
                    e.preventDefault();
                    
                    const planId = this.getAttribute('data-plan-id');
                    const isSaved = this.getAttribute('data-is-saved') === 'true';
                    const heartOutline = this.querySelector('.bi-heart:not(.bi-heart-fill)');
                    const heartFill = this.querySelector('.bi-heart-fill');
                    const spinner = this.querySelector('.spinner-border');
                    
                    if (!planId) return;
                    
                    // Show spinner
                    if (spinner) spinner.style.display = 'inline-block';
                    
                    try {
                        // Toggle: if saved, unsave it; if not saved, save it
                        const handler = isSaved ? 'Remove' : 'Save';
                        const formData = new FormData();
                        formData.append('id', planId);
                        formData.append('__RequestVerificationToken', document.querySelector('input[name="__RequestVerificationToken"]').value);
                        
                        const response = await fetch(`?handler=${handler}`, {
                            method: 'POST',
                            body: formData
                        });
                        
                        if (response.ok) {
                            // Toggle heart icons
                            if (isSaved) {
                                // Was saved, now unsaved - show outline
                                heartFill.classList.add('d-none');
                                heartOutline.classList.remove('d-none');
                                this.setAttribute('data-is-saved', 'false');
                                this.setAttribute('title', 'Save to favorites');
                                showToast('Plan unsaved', 'secondary');
                            } else {
                                // Was not saved, now saved - show filled
                                heartOutline.classList.add('d-none');
                                heartFill.classList.remove('d-none');
                                this.setAttribute('data-is-saved', 'true');
                                this.setAttribute('title', 'Click to unsave');
                                showToast('Plan saved!', 'success');
                            }
                        } else {
                            showToast('Failed to update plan', 'error');
                        }
                    } catch (error) {
                        console.error('Error toggling save:', error);
                        showToast('Failed to update plan', 'error');
                    } finally {
                        if (spinner) spinner.style.display = 'none';
                    }
                });
            });

            // COPY ITINERARY
            const copyBtn = document.getElementById('copyItineraryBtn');
            if (copyBtn) {
                copyBtn.addEventListener('click', async () => {
                    let text = '';
                    const pre = document.getElementById('itineraryText');
                    if (pre) text = pre.textContent || '';
                    else {
                        const days = document.querySelectorAll('#daysContainer details pre');
                        text = Array.from(days).map(x => x.textContent || '').join('\n\n');
                    }
                    try { 
                        await navigator.clipboard.writeText(text); 
                        showToast('Itinerary copied to clipboard!','success'); 
                    } catch {
                        showToast('Failed to copy itinerary','error');
                    }
                });
            }

            // EXPAND/COLLAPSE ALL
            const expandBtn = document.getElementById('expandAllBtn');
            const collapseBtn = document.getElementById('collapseAllBtn');
            const container = document.getElementById('daysContainer');
            if (expandBtn && collapseBtn && container) {
                expandBtn.addEventListener('click', () => { container.querySelectorAll('details').forEach(d => d.open = true); });
                collapseBtn.addEventListener('click', () => { container.querySelectorAll('details').forEach(d => d.open = false); });
            }

            // EDITOR HELPERS
            const ta = document.getElementById('itineraryEditor');
            const preview = document.getElementById('itineraryPreview');
            const btnPreview = document.getElementById('btnPreview');
            const btnDay = document.getElementById('btnDay');
            const btnList = document.getElementById('btnList');
            const btnBold = document.getElementById('btnBold');
            const btnItalic = document.getElementById('btnItalic');
            const charCount = document.getElementById('charCount');
            const btnSave = document.getElementById('btnSave');

            function updateCharCount(){ if(!ta||!charCount) return; charCount.textContent = (ta.value.length) + ' chars'; }
            function autosize(){ if(!ta) return; ta.style.height = 'auto'; ta.style.height = (ta.scrollHeight + 4) + 'px'; }
            function wrapSelection(prefix, suffix){
                if(!ta) return;
                const start = ta.selectionStart, end = ta.selectionEnd;
                const v = ta.value;
                const before = v.slice(0, start), sel = v.slice(start, end), after = v.slice(end);
                ta.value = before + prefix + sel + suffix + after;
                ta.selectionStart = start + prefix.length;
                ta.selectionEnd = end + prefix.length;
                ta.focus(); autosize(); updateCharCount();
            }
            function toggleList(){
                if(!ta) return;
                const start = ta.selectionStart, end = ta.selectionEnd;
                const v = ta.value;
                const before = v.slice(0, start);
                const sel = v.slice(start, end);
                const after = v.slice(end);
                const lines = sel.split(/\r?\n/).map(l => l.length ? (l.startsWith('- ') ? l.slice(2) : ('- ' + l)) : l);
                const out = lines.join('\n');
                ta.value = before + out + after;
                ta.selectionStart = start;
                ta.selectionEnd = start + out.length;
                ta.focus(); autosize(); updateCharCount();
            }
            function insertDay(){
                if(!ta) return;
                const existing = (ta.value.match(/\bDay\s*(\d+)/gi)||[]).map(x=>parseInt(x.replace(/\D/g,''))).filter(n=>!isNaN(n));
                const next = existing.length ? Math.max.apply(null, existing)+1 : 1;
                const n = prompt('Day number:', String(next));
                if(n===null) return;
                const d = prompt('Optional date (e.g., Oct 27, 2025):', '');
                const header = `Day ${n}${d? ' - '+d : ''}` + '\n';
                const start = ta.selectionStart; const v = ta.value;
                ta.value = v.slice(0, start) + header + v.slice(start);
                ta.selectionStart = ta.selectionEnd = start + header.length;
                ta.focus(); autosize(); updateCharCount();
            }
            function renderPreview(){
                if(!ta || !preview) return;
                const text = ta.value;
                const lines = text.split(/\r?\n/);
                let html = '';
                const dayRe = /^Day\s*(\d+)\s*[-ÔøΩÔøΩ:)?]*\s*(.*)$/i;
                let buf = [];
                function esc(s){ return s.replace(/&/g,'&amp;').replace(/</g,'&lt;'); }
                function flush(){ if(buf.length){ html += '<p>'+buf.map(esc).join('<br/>')+'</p>'; buf=[]; } }
                for(const l of lines){
                    if(!l.trim()){ flush(); continue; }
                    const m = l.match(dayRe);
                    if(m){ flush(); html += `<h3>Day ${m[1]} ${m[2] ? '- ' + esc(m[2]) : ''}</h3>`; continue; }
                    if(l.startsWith('- ')){ flush(); html += `<li>${esc(l.substring(2))}</li>`; }
                    else { buf.push(l); }
                }
                flush();
                // WRAP LOOSE LI INTO UL
                if(html.includes('<li>')) html = '<ul>'+html.replace(/(<\/li>)(?!\s*<li>)/g,'$1')+'</ul>';
                preview.innerHTML = html || '<em>Nothing to preview</em>';
            }

            if(ta){ updateCharCount(); autosize();
                // Ensure preview is rendered on load when preview pane is visible
                try { if (preview && preview.style.display !== 'none') { renderPreview(); preview.style.display = 'block'; } } catch(e) {}
                ta.addEventListener('input', ()=>{ updateCharCount(); autosize(); try { if(preview.style.display!=='none') renderPreview(); } catch{} });
                ta.addEventListener('keydown', (e)=>{ if((e.ctrlKey||e.metaKey) && e.key.toLowerCase()==='s'){ e.preventDefault(); btnSave?.click(); }});
            }
            btnBold?.addEventListener('click', ()=> wrapSelection('**','**'));
            btnItalic?.addEventListener('click', ()=> wrapSelection('_','_'));
            btnList?.addEventListener('click', toggleList);
            btnDay?.addEventListener('click', insertDay);
            btnPreview?.addEventListener('click', ()=>{
                if(!preview) return;
                const visible = preview.style.display !== 'none';
                if(visible){ preview.style.display = 'none'; }
                else { renderPreview(); preview.style.display = 'block'; }
            });

            // ITINERARY FORM SUBMIT SPINNERS
            const itineraryForm = document.getElementById('itineraryForm');
            if (itineraryForm) {
                itineraryForm.addEventListener('submit', function(e) {
                    const submitBtn = e.submitter;
                    if (submitBtn) {
                        if (submitBtn.id === 'btnSave') {
                            const spinner = document.getElementById('btnSaveSpinner');
                            const text = document.getElementById('btnSaveText');
                            if (spinner && text) {
                                submitBtn.disabled = true;
                                spinner.style.display = 'inline-block';
                                text.textContent = 'Saving...';
                            }
                        } else if (submitBtn.id === 'btnReset') {
                            const spinner = document.getElementById('btnResetSpinner');
                            const text = document.getElementById('btnResetText');
                            if (spinner && text) {
                                submitBtn.disabled = true;
                                spinner.style.display = 'inline-block';
                                text.textContent = 'Resetting...';
                            }
                        }
                    }
                });
            }

            // TOGGLE OVERLAY AND DISABLE DETAILS FORM WHEN PROCESSING
            try {
                const overlay = document.getElementById('processingOverlay');
                const detailsForm = document.getElementById('detailsForm');
                const hasPlanData = document.getElementById('travel-plan-data') != null;
                if (overlay) {
                    if (isProcessing && !hasPlanData) {
                        overlay.style.display = 'flex';

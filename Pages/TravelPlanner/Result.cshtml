    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        // AI Assistant Chat functionality
        (function() {
            const chatMessages = document.getElementById('chatMessages');
            const chatInput = document.getElementById('chatInput');
            const sendBtn = document.getElementById('sendChatBtn');
            const sendBtnText = document.getElementById('sendBtnText');
            const sendBtnSpinner = document.getElementById('sendBtnSpinner');

            if (!chatMessages || !chatInput || !sendBtn) return;

            let connection = null;
            let isConnecting = false;

            async function ensureConnection() {
                if (connection && connection.state === signalR.HubConnectionState.Connected) {
                    return connection;
                }

                if (isConnecting) {
                    return null;
                }

                isConnecting = true;
                connection = new signalR.HubConnectionBuilder()
                    .withUrl("/hubs/assistantChat")
                    .withAutomaticReconnect()
                    .build();

                connection.on("StreamStart", function() {
                    const msgDiv = document.createElement('div');
                    msgDiv.className = 'alert alert-secondary mb-2 assistant-message';
                    msgDiv.id = 'streaming-message';
                    msgDiv.innerHTML = '<strong>?? Assistant:</strong> <span class="message-content"></span>';
                    chatMessages.appendChild(msgDiv);
                    chatMessages.scrollTop = chatMessages.scrollHeight;
                });

                connection.on("StreamChunk", function(chunk) {
                    const streamingMsg = document.getElementById('streaming-message');
                    if (streamingMsg) {
                        const content = streamingMsg.querySelector('.message-content');
                        content.textContent += chunk;
                        chatMessages.scrollTop = chatMessages.scrollHeight;
                    }
                });

                connection.on("StreamEnd", function(fullResponse) {
                    const streamingMsg = document.getElementById('streaming-message');
                    if (streamingMsg) {
                        streamingMsg.removeAttribute('id');
                    }
                    
                    // Try to parse delta from response
                    const delta = parseDeltaFromResponse(fullResponse);
                    if (delta && delta.changes && delta.changes.length > 0) {
                        showDiffPreview(delta, fullResponse);
                    } else {
                        enableInput();
                    }
                });

                connection.on("Error", function(errorMessage) {
                    const errorDiv = document.createElement('div');
                    errorDiv.className = 'alert alert-danger mb-2';
                    errorDiv.innerHTML = `<strong>? Error:</strong> ${errorMessage}`;
                    chatMessages.appendChild(errorDiv);
                    chatMessages.scrollTop = chatMessages.scrollHeight;
                    enableInput();
                });

                try {
                    await connection.start();
                    console.log("SignalR Connected");
                } catch (err) {
                    console.error("SignalR Connection Error:", err);
                    alert("Failed to connect to chat service. Please refresh the page.");
                } finally {
                    isConnecting = false;
                }

                return connection;
            }

            function disableInput() {
                chatInput.disabled = true;
                sendBtn.disabled = true;
                sendBtnText.classList.add('d-none');
                sendBtnSpinner.classList.remove('d-none');
            }

            function enableInput() {
                chatInput.disabled = false;
                sendBtn.disabled = false;
                sendBtnText.classList.remove('d-none');
                sendBtnSpinner.classList.add('d-none');
            }

            async function sendMessage() {
                const message = chatInput.value.trim();
                if (!message) return;

                const conn = await ensureConnection();
                if (!conn) {
                    alert("Connecting to chat service...");
                    return;
                }

                const userDiv = document.createElement('div');
                userDiv.className = 'alert alert-primary mb-2 user-message';
                userDiv.innerHTML = `<strong>You:</strong> ${escapeHtml(message)}`;
                chatMessages.appendChild(userDiv);
                chatMessages.scrollTop = chatMessages.scrollHeight;

                // Save user message to history
                saveToHistory('user', message);

                disableInput();
                chatInput.value = '';

                const planData = document.querySelector('#tab-plan');
                const userId = 'user-' + Date.now();
                
                // Get chat history to send as context
                const planId = '@Model.PlanId';
                const historyJson = localStorage.getItem(`chat_${planId}`) || '[]';

                try {
                    await conn.invoke("SendMessage", userId, message, '', '@Model.TravelPlan?.Destination', @((Model.TravelPlan?.EndDate - Model.TravelPlan?.StartDate)?.Days ?? 5), @(Model.TravelPlan?.NumberOfTravelers ?? 2), @(Model.TravelPlan?.Budget ?? 1000), historyJson);
                } catch (err) {
                    console.error("Error sending message:", err);
                    const errorDiv = document.createElement('div');
                    errorDiv.className = 'alert alert-danger mb-2';
                    errorDiv.innerHTML = `<strong>üö´ Error:</strong> Failed to send message.`;
                    chatMessages.appendChild(errorDiv);
                    enableInput();
                }
            }

            sendBtn.addEventListener('click', sendMessage);
            chatInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    sendMessage();
                }
            });

            document.querySelectorAll('[data-tab="chat"]').forEach(btn => {
                btn.addEventListener('click', function() {
                    if (!connection) {
                        ensureConnection();
                    }
                });
            });

            // ========== DIFF PREVIEW & APPLY CHANGES ==========
            let currentDelta = null;
            let currentFullResponse = null;

            function parseDeltaFromResponse(text) {
                try {
                    // Look for JSON block in markdown
                    const jsonMatch = text.match(/```json\s*\n?([\s\S]*?)\n?```/);
                    if (jsonMatch) {
                        const json = jsonMatch[1].trim();
                        return JSON.parse(json);
                    }
                    
                    // Try to find plain JSON
                    const plainMatch = text.match(/\{"changes":\s*\[[\s\S]*?\]\s*\}/);
                    if (plainMatch) {
                        return JSON.parse(plainMatch[0]);
                    }
                } catch (e) {
                    console.warn("Failed to parse delta:", e);
                }
                return null;
            }

            function showDiffPreview(delta, fullResponse) {
                currentDelta = delta;
                currentFullResponse = fullResponse;
                
                const diffContent = document.getElementById('diffContent');
                const diffPanel = document.getElementById('diffPreviewPanel');
                
                let html = '';
                if (delta.truncateToDays && Number.isInteger(delta.truncateToDays)) {
                    html += `<div class="alert alert-warning py-1 px-2 mb-2">Truncate itinerary to <strong>${delta.truncateToDays}</strong> day(s)</div>`;
                }
                (delta.changes || []).forEach(change => {
                    html += `<div class="mb-2 p-2 border rounded">`;
                    html += `<strong>Day ${change.day}:</strong><br/>`;
                    
                    if (change.addMorning && change.addMorning.length > 0) {
                        change.addMorning.forEach(act => {
                            html += `<div class="text-success">+ Morning: ${escapeHtml(act)}</div>`;
                        });
                    }
                    if (change.addAfternoon && change.addAfternoon.length > 0) {
                        change.addAfternoon.forEach(act => {
                            html += `<div class="text-success">+ Afternoon: ${escapeHtml(act)}</div>`;
                        });
                    }
                    if (change.addEvening && change.addEvening.length > 0) {
                        change.addEvening.forEach(act => {
                            html += `<div class="text-success">+ Evening: ${escapeHtml(act)}</div>`;
                        });
                    }
                    if (change.remove && change.remove.length > 0) {
                        change.remove.forEach(act => {
                            html += `<div class="text-danger">- Remove: ${escapeHtml(act)}</div>`;
                        });
                    }
                    if (change.note) {
                        html += `<div class="text-info"><em>Note: ${escapeHtml(change.note)}</em></div>`;
                    }
                    
                    html += `</div>`;
                });
                
                diffContent.innerHTML = html;
                diffPanel.style.display = 'block';
                enableInput();
            }

            function closeDiffPreview() {
                document.getElementById('diffPreviewPanel').style.display = 'none';
                currentDelta = null;
                currentFullResponse = null;
            }

            async function applyChanges() {
                if (!currentDelta) {
                    showErrorNotification('No changes to apply');
                    return;
                }

                const applyBtn = document.getElementById('applyChangesBtn');
                applyBtn.disabled = true;
                applyBtn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Applying...';

                try {
                    const planId = '@Model.PlanId';
                    const antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value;
                    console.log('Sending delta:', currentDelta);
                    console.log('PlanId:', planId);
                    console.log('AntiForgery token:', antiForgeryToken ? 'present' : 'missing');
                    
                    const url = `/TravelPlanner/Result/${planId}?handler=ApplyDelta`;
                    console.log('Posting to:', url);
                    
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'X-CSRF-TOKEN': antiForgeryToken || '',
                            'RequestVerificationToken': antiForgeryToken || ''
                        },
                        body: JSON.stringify({
                            planId: planId,
                            delta: currentDelta
                        })
                    });
                    
                    console.log('Response status:', response.status);

                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}: ${response.statusText}`);
                    }

                    const result = await response.json();
                    console.log('Backend response:', result);
                    
                    if (result.success) {
                        console.log('Success! New itinerary length:', result.newItinerary?.length);
                        console.log('Parsed days count:', result.parsedDays?.length);
                        
                        // Show success notification
                        showSuccessNotification('Plan updated successfully!');
                        
                        // Close diff preview
                        closeDiffPreview();
                        
                        // Save to history
                        saveToHistory('assistant', currentFullResponse);
                        
                        // Refresh the plan section
                        console.log('Reloading page in 1.5s...');
                        setTimeout(() => {
                            window.location.reload();
                        }, 1500);
                    } else {
                        console.error('Backend returned error:', result.error);
                        showErrorNotification(result.error || 'Unknown error occurred');
                    }
                } catch (err) {
                    console.error('Error applying changes:', err);
                    showErrorNotification('Failed to apply changes: ' + err.message);
                } finally {
                    applyBtn.disabled = false;
                    applyBtn.innerHTML = '‚úÖ Apply Changes';
                }
            }

            function escapeHtml(text) {
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            function showSuccessNotification(message) {
                const notification = document.createElement('div');
                notification.className = 'alert alert-success position-fixed top-0 start-50 translate-middle-x mt-3';
                notification.style.zIndex = '9999';
                notification.innerHTML = `<strong>‚úÖ ${escapeHtml(message)}</strong>`;
                document.body.appendChild(notification);
                
                setTimeout(() => {
                    notification.remove();
                }, 3000);
            }

            function showErrorNotification(message) {
                const notification = document.createElement('div');
                notification.className = 'alert alert-danger position-fixed top-0 start-50 translate-middle-x mt-3';
                notification.style.zIndex = '9999';
                notification.innerHTML = `<strong>‚ùå ${escapeHtml(message)}</strong>`;
                document.body.appendChild(notification);
                
                setTimeout(() => {
                    notification.remove();
                }, 5000);
            }

            // ========== CHAT HISTORY ==========
            function saveToHistory(role, content) {
                try {
                    const planId = '@Model.PlanId';
                    const history = JSON.parse(localStorage.getItem(`chat_${planId}`) || '[]');
                    history.push({
                        role: role,
                        content: content,
                        timestamp: new Date().toISOString()
                    });
                    // Keep last 20 messages
                    if (history.length > 20) {
                        history.splice(0, history.length - 20);
                    }
                    localStorage.setItem(`chat_${planId}`, JSON.stringify(history));
                } catch (e) {
                    console.warn('Failed to save chat history:', e);
                }
            }

            function loadChatHistory() {
                try {
                    const planId = '@Model.PlanId';
                    const history = JSON.parse(localStorage.getItem(`chat_${planId}`) || '[]');
                    const chatMessages = document.getElementById('chatMessages');
                    
                    // Clear welcome message if history exists
                    if (history.length > 0) {
                        chatMessages.innerHTML = '';
                    }
                    
                    history.forEach(msg => {
                        const msgDiv = document.createElement('div');
                        if (msg.role === 'user') {
                            msgDiv.className = 'alert alert-primary mb-2 user-message';
                            msgDiv.innerHTML = `<strong>You:</strong> ${escapeHtml(msg.content)}`;
                        } else {
                            msgDiv.className = 'alert alert-secondary mb-2 assistant-message';
                            msgDiv.innerHTML = `<strong>ü§ñ Assistant:</strong> ${escapeHtml(msg.content.substring(0, 200))}${msg.content.length > 200 ? '...' : ''}`;
                        }
                        chatMessages.appendChild(msgDiv);
                    });
                    
                    chatMessages.scrollTop = chatMessages.scrollHeight;
                } catch (e) {
                    console.warn('Failed to load chat history:', e);
                }
            }

            // Load history on chat tab open
            document.querySelectorAll('[data-tab="chat"]').forEach(btn => {
                btn.addEventListener('click', function() {
                    loadChatHistory();
                });
            });

            // ========== UNDO/REDO FUNCTIONALITY ==========
            let undoStack = [];
            let redoStack = [];
            const MAX_HISTORY = 10;

            function savePlanSnapshot() {
                try {
                    const planId = '@Model.PlanId';
                    const snapshot = {
                        planId: planId,
                        itinerary: document.getElementById('daysContainer')?.innerHTML || '',
                        timestamp: new Date().toISOString()
                    };
                    
                    undoStack.push(snapshot);
                    if (undoStack.length > MAX_HISTORY) {
                        undoStack.shift();
                    }
                    
                    // Clear redo stack when new change is made
                    redoStack = [];
                    
                    updateUndoRedoButtons();
                    
                    // Save to sessionStorage
                    sessionStorage.setItem(`undo_${planId}`, JSON.stringify(undoStack));
                    sessionStorage.setItem(`redo_${planId}`, JSON.stringify(redoStack));
                } catch (e) {
                    console.warn('Failed to save plan snapshot:', e);
                }
            }

            function loadPlanHistory() {
                try {
                    const planId = '@Model.PlanId';
                    undoStack = JSON.parse(sessionStorage.getItem(`undo_${planId}`) || '[]');
                    redoStack = JSON.parse(sessionStorage.getItem(`redo_${planId}`) || '[]');
                    updateUndoRedoButtons();
                } catch (e) {
                    console.warn('Failed to load plan history:', e);
                }
            }

            function updateUndoRedoButtons() {
                const undoBtn = document.getElementById('undoBtn');
                const redoBtn = document.getElementById('redoBtn');
                
                if (undoBtn) {
                    undoBtn.disabled = undoStack.length === 0;
                }
                if (redoBtn) {
                    redoBtn.disabled = redoStack.length === 0;
                }
            }

            async function undoChange() {
                if (undoStack.length === 0) return;
                
                try {
                    // Save current state to redo stack
                    const planId = '@Model.PlanId';
                    const currentState = {
                        planId: planId,
                        itinerary: document.getElementById('daysContainer')?.innerHTML || '',
                        timestamp: new Date().toISOString()
                    };
                    redoStack.push(currentState);
                    
                    // Pop from undo stack
                    const snapshot = undoStack.pop();
                    
                    // Restore snapshot (in real app, would POST to backend)
                    showSuccessNotification('Undo applied - reloading...');
                    
                    // Update storage
                    sessionStorage.setItem(`undo_${planId}`, JSON.stringify(undoStack));
                    sessionStorage.setItem(`redo_${planId}`, JSON.stringify(redoStack));
                    
                    updateUndoRedoButtons();
                    
                    // For now, just show notification (full implementation would POST snapshot.itinerary to backend)
                    setTimeout(() => {
                        // window.location.reload(); // Uncomment when backend supports restoring snapshots
                    }, 1000);
                } catch (e) {
                    console.error('Failed to undo:', e);
                    alert('Failed to undo change');
                }
            }

            async function redoChange() {
                if (redoStack.length === 0) return;
                
                try {
                    // Save current state to undo stack
                    const planId = '@Model.PlanId';
                    const currentState = {
                        planId: planId,
                        itinerary: document.getElementById('daysContainer')?.innerHTML || '',
                        timestamp: new Date().toISOString()
                    };
                    undoStack.push(currentState);
                    
                    // Pop from redo stack
                    const snapshot = redoStack.pop();
                    
                    // Restore snapshot
                    showSuccessNotification('Redo applied - reloading...');
                    
                    // Update storage
                    sessionStorage.setItem(`undo_${planId}`, JSON.stringify(undoStack));
                    sessionStorage.setItem(`redo_${planId}`, JSON.stringify(redoStack));
                    
                    updateUndoRedoButtons();
                    
                    setTimeout(() => {
                        // window.location.reload();
                    }, 1000);
                } catch (e) {
                    console.error('Failed to redo:', e);
                    alert('Failed to redo change');
                }
            }

            // Attach undo/redo button handlers
            document.getElementById('undoBtn')?.addEventListener('click', undoChange);
            document.getElementById('redoBtn')?.addEventListener('click', redoChange);
            
            // Attach Apply/Reject button handlers
            document.getElementById('applyChangesBtn')?.addEventListener('click', async function() {
                savePlanSnapshot(); // Save before applying
                await applyChanges();
            });
            document.getElementById('rejectChangesBtn')?.addEventListener('click', closeDiffPreview);

            // Load history on page load
            loadPlanHistory();
        })();
    </script>

@page "{id?}"
@model project.Pages.TravelPlanner.ResultModel
@{
    ViewData["Title"] = "Your Travel Plan";
    var plan = Model.TravelPlan;
    var planId = Model.PlanId ?? (Model.RouteData.Values["id"] as string);
}


@if (plan == null)
{
    <div class="alert alert-warning">No travel plan data was found. Please create a new plan.</div>
    <p><a asp-page="Index" class="btn btn-primary">Back to planner</a></p>
}
else
{
    var days = (plan.EndDate - plan.StartDate).Days + 1;
    var perPersonPerDay = plan.NumberOfTravelers > 0 && days > 0
        ? plan.Budget / plan.NumberOfTravelers / days
        : 0;

    <!-- Destination Hero Image -->
    @if (!string.IsNullOrEmpty(plan?.DestinationImageUrl))
    {
        <!-- Mobile: Simple image with header below -->
        <div class="mb-3 d-md-none hero-image">
            <img src="@plan.DestinationImageUrl" alt="@plan.Destination" 
                 class="img-fluid rounded w-100" 
                 style="max-height: 200px; object-fit: cover;" />
        </div>
        
        <!-- Desktop: Image with overlay -->
        <div class="mb-3 mb-md-4 position-relative d-none d-md-block hero-image">
            <img src="@plan.DestinationImageUrl" alt="@plan.Destination" 
                 class="img-fluid rounded w-100" 
                 style="max-height: 300px; object-fit: cover;" />
            <div class="position-absolute bottom-0 start-0 end-0 bg-dark bg-opacity-50 text-white p-2 p-md-3 rounded-bottom">
                <h1 class="mb-0 fs-2 fs-md-1" style="text-transform: capitalize;">@plan?.Destination</h1>
                <div class="d-flex gap-2 flex-wrap align-items-center mt-2">
                    <span class="badge text-bg-primary">@days days</span>
                    <span class="badge text-bg-secondary d-none d-sm-inline">@plan?.NumberOfTravelers traveler@((plan?.NumberOfTravelers ?? 0) == 1 ? "" : "s")</span>
                    <span class="badge text-bg-secondary d-inline d-sm-none">@(plan?.NumberOfTravelers ?? 0) üë•</span>
                    <span class="badge text-bg-success">$@perPersonPerDay.ToString("F0")<span class="d-none d-sm-inline">/person/day</span><span class="d-inline d-sm-none">/p/d</span></span>
                    <button type="button" class="btn btn-link p-0 save-heart-btn" id="savePlanBtn" data-plan-id="@planId" data-is-saved="@Model.IsSaved.ToString().ToLower()" title="@(Model.IsSaved ? "Click to unsave" : "Save to favorites")">
                        <i class="bi bi-heart fs-4 text-white @(Model.IsSaved ? "d-none" : "")" id="heartOutline"></i>
                        <i class="bi bi-heart-fill fs-4 text-danger @(Model.IsSaved ? "" : "d-none")" id="heartFill"></i>
                        <span class="spinner-border spinner-border-sm ms-1" role="status" aria-hidden="true" style="display: none;" id="savePlanSpinner"></span>
                    </button>
                </div>
            </div>
        </div>
    }

    <!-- Simple header (mobile when image exists, always when no image) -->
    <header class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3 @(!string.IsNullOrEmpty(plan?.DestinationImageUrl) ? "d-md-none" : "")">
        <h1 class="mb-0 fs-4 fs-md-2" style="text-transform: capitalize;">@plan?.Destination</h1>
        <div class="d-flex gap-2 flex-wrap align-items-center">
            <span class="badge text-bg-primary">@days days</span>
            <span class="badge text-bg-secondary d-none d-sm-inline">@plan?.NumberOfTravelers traveler@((plan?.NumberOfTravelers ?? 0) == 1 ? "" : "s")</span>
            <span class="badge text-bg-secondary d-inline d-sm-none">@(plan?.NumberOfTravelers ?? 0) üë•</span>
            <span class="badge text-bg-success">$@perPersonPerDay.ToString("F0")<span class="d-none d-sm-inline">/person/day</span><span class="d-inline d-sm-none">/p/d</span></span>
            <button type="button" class="btn btn-link p-0 save-heart-btn" id="savePlanBtnMobile" data-plan-id="@planId" data-is-saved="@Model.IsSaved.ToString().ToLower()" title="@(Model.IsSaved ? "Click to unsave" : "Save to favorites")">
                <i class="bi bi-heart fs-4 text-secondary @(Model.IsSaved ? "d-none" : "")"></i>
                <i class="bi bi-heart-fill fs-4 text-danger @(Model.IsSaved ? "" : "d-none")"></i>
                <span class="spinner-border spinner-border-sm ms-1" role="status" aria-hidden="true" style="display: none;"></span>
            </button>
        </div>
    </header>

    <hr class="my-3" />

    <!-- Desktop navigation tabs (mobile has bottom navbar) -->
    <nav class="mb-3 d-none d-md-flex gap-2 flex-wrap main-tabs" role="tablist" aria-label="Plan views">
        <button type="button" data-tab="plan" aria-selected="true" class="btn btn-outline-primary btn-sm flex-md-grow-0" style="min-height: 48px;">Plan</button>
        <button type="button" data-tab="map" aria-selected="false" class="btn btn-outline-primary btn-sm flex-md-grow-0" style="min-height: 48px;">Map</button>
        <button type="button" data-tab="details" aria-selected="false" class="btn btn-outline-primary btn-sm flex-md-grow-0" style="min-height: 48px;">Details</button>
        <button type="button" data-tab="chat" aria-selected="false" class="btn btn-outline-primary btn-sm flex-md-grow-0" style="min-height: 48px;">AI Assistant</button>
    </nav>

    <section id="tab-plan" data-tab-panel style="padding-top: 0;">
        <div class="d-flex justify-content-end gap-2 mb-3">
            <button type="button" class="btn btn-sm btn-outline-secondary" id="expandAllBtn" style="min-height: 36px;">Expand all</button>
            <button type="button" class="btn btn-sm btn-outline-secondary" id="collapseAllBtn" style="min-height: 36px;">Collapse all</button>
        </div>

        @if (Model.ParsedDays.Count == 0)
        {
            <pre id="itineraryText" class="bg-light p-2 p-md-3 rounded border small">@Model.VisibleItinerary</pre>
        }
        else
        {
            <div id="daysContainer">
                @for (var i = 0; i < Model.ParsedDays.Count; i++)
                {
                    var d = Model.ParsedDays[i];
                    <details class="mb-3 border rounded" open>
                        <summary class="fw-semibold p-2 p-md-3 bg-light" style="cursor: pointer; min-height: 44px; display: flex; align-items: center;">Day @d.Day @if(!string.IsNullOrWhiteSpace(d.Date)){<text>- @d.Date</text>}</summary>
                        <div class="p-2 p-md-3">
                            @* Day Images - 2-3 images per day *@
                            @if (d.Images != null && d.Images.Any())
                            {
                                <div class="row g-2 mb-3">
                                    @foreach (var img in d.Images.Take(3))
                                    {
                                        var colSize = d.Images.Count == 1 ? "12" : (img.IsPrimary ? "12" : "6");
                                        <div class="col-@colSize">
                                            <img src="@img.Url" 
                                                 alt="@img.Description" 
                                                 class="img-fluid rounded w-100 day-image-clickable" 
                                                 style="max-height: @(img.IsPrimary ? "250px" : "180px"); object-fit: cover; cursor: pointer;"
                                                 loading="lazy"
                                                 data-bs-toggle="modal"
                                                 data-bs-target="#imageModal"
                                                 data-image-url="@img.Url"
                                                 data-image-description="@img.Description" />
                                            @if (!string.IsNullOrEmpty(img.Description))
                                            {
                                                <div class="text-muted small mt-1">@img.Description</div>
                                            }
                                        </div>
                                    }
                                </div>
                            }
                            
                            @foreach (var line in d.Lines)
                            {
                                var trimmedLine = line.Trim();
                                if (string.IsNullOrWhiteSpace(line))
                                {
                                    <div class="mb-1"></div>
                                    continue;
                                }
                                else if (line.TrimStart().StartsWith("üåÖ") || line.TrimStart().StartsWith("‚òÄÔ∏è") || line.TrimStart().StartsWith("üåÜ"))
                                {
                                    <h6 class="mt-3 mb-2 text-primary">@line</h6>
                                }
                                else if (line.TrimStart().StartsWith("üìç"))
                                {
                                    <div class="ms-2 mb-1"><strong>@line</strong></div>
                                }
                                else if (line.TrimStart().StartsWith("ÔøΩ"))
                                {
                                    <div class="ms-3 mb-1 text-secondary" style="font-size: 0.95rem;">@line</div>
                                }
                                else if (line.TrimStart().StartsWith("‚ÑπÔ∏è"))
                                {
                                    <div class="ms-3 mb-1" style="font-size: 0.9rem;">@line</div>
                                }
                                else
                                {
                                    <div class="ms-2 mb-1">@line</div>
                                }
                            }
                        </div>
                    </details>
                }
            </div>
        }

            <details class="mt-3 border rounded">
            <summary class="fw-semibold p-2 p-md-3 bg-light" style="cursor: pointer; min-height: 44px; display: flex; align-items: center;">Edit itinerary</summary>
            <form method="post" asp-page-handler="UpdateItinerary" asp-route-id="@planId" class="mt-2 p-2 p-md-3" id="itineraryForm">
                <div class="position-sticky top-0 bg-white py-2 z-1 border-bottom mb-2 d-flex gap-1 gap-md-2 flex-wrap align-items-center">
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="btnDay" style="min-height: 36px;">+ Day</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="btnList" style="min-height: 36px;">‚Ä¢ List</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="btnBold" style="min-height: 36px;"><strong>B</strong></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="btnItalic" style="min-height: 36px;"><em>I</em></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary" id="btnPreview" style="min-height: 36px;">Preview</button>
                    <span class="ms-auto small text-muted" id="charCount"></span>
                </div>

                <div class="row g-2 g-md-3">
                    <div class="col-12 col-lg-6">
                            <textarea name="updatedItinerary" id="itineraryEditor" rows="12" class="form-control small" style="font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace; white-space: pre;">@Model.VisibleItinerary</textarea>
                        </div>
                    <div class="col-12 col-lg-6">
                        <div id="itineraryPreview" class="border rounded p-2 bg-light small" style="min-height: 200px; display:block"></div>
                    </div>
                </div>

                    <div class="mt-2 mt-md-3 d-flex gap-2 flex-wrap">
                    <button type="submit" class="btn btn-primary flex-fill flex-sm-grow-0" id="btnSave" style="min-height: 44px;">
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true" style="display: none;" id="btnSaveSpinner"></span>
                        <span id="btnSaveText">Save changes</span>
                    </button>
                    <button type="submit" formaction="?handler=ResetItinerary&id=@planId" class="btn btn-outline-secondary flex-fill flex-sm-grow-0" id="btnReset" style="min-height: 44px;">
                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true" style="display: none;" id="btnResetSpinner"></span>
                        <span id="btnResetText"><span class="d-none d-sm-inline">Reset to AI version</span><span class="d-inline d-sm-none">Reset</span></span>
                    </button>
                </div>
            </form>
        </details>
    </section>

    <!-- PLAN DATA FOR CLIENT-SIDE SCRIPTS -->
    <script id="travel-plan-data" type="application/json">@Html.Raw(System.Text.Json.JsonSerializer.Serialize(new {
        id = planId,
        destination = plan?.Destination ?? string.Empty,
        startDate = plan?.StartDate ?? DateTime.MinValue,
        endDate = plan?.EndDate ?? DateTime.MinValue,
        numberOfTravelers = plan?.NumberOfTravelers ?? 0,
        budget = plan?.Budget ?? 0,
        travelPreferences = plan?.TravelPreferences,
        accommodations = (plan?.Accommodations ?? new List<string>()),
        activities = (plan?.Activities ?? new List<string>()),
        transportation = (plan?.Transportation ?? new List<string>()),
        generatedItinerary = plan?.GeneratedItinerary ?? string.Empty,
        createdAt = plan?.CreatedAt ?? DateTime.MinValue,
        parsedDays = (Model.ParsedDays?.Select(d => new { day = d.Day, date = d.Date, lines = d.Lines }).ToArray()) ?? Array.Empty<object>()
    }, new System.Text.Json.JsonSerializerOptions { WriteIndented = false }))</script>
    @Html.AntiForgeryToken()

    <section id="tab-map" data-tab-panel hidden>
        <!-- Desktop: 2-column layout (map + sidebar) -->
        <div class="row g-3 g-md-4">
            <!-- Left column: Map (desktop priority) -->
            <div class="col-12 col-lg-8">
                <div id="plan-map" data-map-container class="bg-light rounded border position-relative result-map map-container-mobile">
                    <!-- Map loading indicator -->
                    <div id="map-loading" class="position-absolute top-50 start-50 translate-middle text-center" style="z-index: 1;">
                        <div class="spinner-border text-primary mb-2" role="status">
                            <span class="visually-hidden">Loading map...</span>
                        </div>
                        <div class="small text-muted">Loading map...</div>
                    </div>
                </div>
            </div>

            <!-- Right column: Sidebar (desktop only visible) -->
            <div class="col-12 col-lg-4">
                <div class="map-sidebar">
                    <!-- Destination Hero Card removed (no duplication) -->

                    <!-- Day Filter Chips (desktop: grid, mobile: horizontal scroll) -->
                    <div class="mb-3">
                        <h6 class="mb-2 text-muted small text-uppercase">Filter by day</h6>
                        <div class="day-chips-container">
                            <div id="map-controls" class="day-chips-grid"></div>
                        </div>
                    </div>

                    <!-- Search/Add Location Section -->
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h6 class="card-title mb-3">Add Location</h6>
                            <div class="input-group mb-2 search-input-mobile">
                                <span class="input-group-text bg-white border-end-0">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                                    </svg>
                                </span>
                                <input type="text" id="location-search" class="form-control border-start-0" placeholder="Search places..." />
                            </div>
                            <button type="button" class="btn btn-primary w-100 add-location-btn" id="add-location-btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="me-1" viewBox="0 0 16 16">
                                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                                </svg>
                                Add to Map
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="tab-details" data-tab-panel hidden>
        <!-- Hero Summary Card -->
        <div class="card shadow-sm mb-4 details-hero-card">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <h2 class="h4 mb-0">üìä Trip Overview</h2>
                    <span class="badge bg-success fs-5">$@(plan?.Budget ?? 0)</span>
                </div>
                <div class="row g-3">
                    <div class="col-sm-6 col-lg-4">
                        <div class="detail-stat-card">
                            <div class="stat-icon">üìÖ</div>
                            <div class="stat-content">
                                <div class="stat-label">Duration</div>
                                <div class="stat-value">@days days</div>
                                <div class="stat-subtext">@plan?.StartDate.ToString("MMM dd") - @plan?.EndDate.ToString("MMM dd, yyyy")</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="detail-stat-card">
                            <div class="stat-icon">üë•</div>
                            <div class="stat-content">
                                <div class="stat-label">Travelers</div>
                                <div class="stat-value">@(plan?.NumberOfTravelers ?? 0) @((plan?.NumberOfTravelers ?? 0) == 1 ? "person" : "people")</div>
                                <div class="stat-subtext">$@perPersonPerDay.ToString("F0")/person/day</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 col-lg-4">
                        <div class="detail-stat-card">
                            <div class="stat-icon">üè®</div>
                            <div class="stat-content">
                                <div class="stat-label">Accommodations</div>
                                <div class="stat-value">@((plan?.Accommodations?.Count ?? 0)) stays</div>
                                <div class="stat-subtext">@((plan?.Activities?.Count ?? 0)) activities planned</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    @if (!string.IsNullOrWhiteSpace(plan?.TravelPreferences))
        {
            <div class="alert alert-info mb-4">
                <strong>‚ú® Your Preferences:</strong> @plan?.TravelPreferences
            </div>
        }

    @if ((plan?.Accommodations) != null && plan.Accommodations.Count > 0)
        {
            <div class="card shadow-sm mb-3 detail-section-card">
                <div class="card-header bg-white border-0 pt-3 pb-2">
                    <h3 class="h5 mb-0 d-flex align-items-center">
                        <span class="detail-icon me-2">üè®</span>
                        Accommodations
                        <span class="badge bg-secondary ms-2">@plan.Accommodations.Count</span>
                    </h3>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var item in plan.Accommodations) { 
                        <li class="list-group-item py-3">
                            <div class="d-flex align-items-start">
                                <span class="me-2">üîπ</span>
                                <span>@item</span>
                            </div>
                        </li> 
                    }
                </ul>
            </div>
        }

    @if ((plan?.Activities) != null && plan.Activities.Count > 0)
        {
            <div class="card shadow-sm mb-3 detail-section-card">
                <div class="card-header bg-white border-0 pt-3 pb-2">
                    <h3 class="h5 mb-0 d-flex align-items-center">
                        <span class="detail-icon me-2">üéØ</span>
                        Activities & Experiences
                        <span class="badge bg-secondary ms-2">@plan.Activities.Count</span>
                    </h3>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var item in plan.Activities) { 
                        <li class="list-group-item py-3">
                            <div class="d-flex align-items-start">
                                <span class="me-2">‚úÖ</span>
                                <span>@item</span>
                            </div>
                        </li> 
                    }
                </ul>
            </div>
        }

    @if ((plan?.Transportation) != null && plan.Transportation.Count > 0)
        {
            <div class="card shadow-sm mb-3 detail-section-card">
                <div class="card-header bg-white border-0 pt-3 pb-2">
                    <h3 class="h5 mb-0 d-flex align-items-center">
                        <span class="detail-icon me-2">üöó</span>
                        Transportation
                        <span class="badge bg-secondary ms-2">@plan.Transportation.Count</span>
                    </h3>
                </div>
                <ul class="list-group list-group-flush">
                    @foreach (var t in plan.Transportation) { 
                        <li class="list-group-item py-3">
                            <div class="d-flex align-items-start">
                                <span class="me-2">üöÄ</span>
                                <span>@t</span>
                            </div>
                        </li> 
                    }
                </ul>
            </div>
        }
        <details class="mt-3">
            <summary class="fw-semibold">Edit details</summary>
            <form id="detailsForm" method="post" asp-page-handler="UpdateDetails" asp-route-id="@planId" class="mt-3">
                <div class="row g-3">
                    <div class="col-sm-6 col-md-3">
                        <label class="form-label">Start</label>
                        <input type="date" name="startDate" value="@plan?.StartDate.ToString("yyyy-MM-dd")" class="form-control" @(Model.IsProcessing?"disabled":"") />
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <label class="form-label">End</label>
                        <input type="date" name="endDate" value="@plan?.EndDate.ToString("yyyy-MM-dd")" class="form-control" @(Model.IsProcessing?"disabled":"") />
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <label class="form-label">Travelers</label>
                        <input type="number" name="numberOfTravelers" min="1" max="20" value="@(plan?.NumberOfTravelers ?? 0)" class="form-control" @(Model.IsProcessing?"disabled":"") />
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <label class="form-label">Budget (USD)</label>
                        <input type="number" name="budget" min="0" step="1" value="@(plan?.Budget ?? 0)" class="form-control" @(Model.IsProcessing?"disabled":"") />
                    </div>
                </div>

                <hr />

                <div class="mb-3">
                    <label class="form-label">Additional preferences</label>
                    <textarea name="travelPreferences" class="form-control" rows="2" @(Model.IsProcessing?"disabled":"")>@(plan?.TravelPreferences)</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Accommodations (one per line)</label>
                    <textarea name="accommodations" class="form-control" rows="3" @(Model.IsProcessing?"disabled":"")>@string.Join("\n", plan?.Accommodations ?? new List<string>())</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Activities (one per line)</label>
                    <textarea name="activities" class="form-control" rows="3" @(Model.IsProcessing?"disabled":"")>@string.Join("\n", plan?.Activities ?? new List<string>())</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Transportation (one per line)</label>
                    <textarea name="transportation" class="form-control" rows="2" @(Model.IsProcessing?"disabled":"")>@string.Join("\n", plan?.Transportation ?? new List<string>())</textarea>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary" @(Model.IsProcessing?"disabled":"")>Save details</button>
                    <a asp-page="Result" asp-route-id="@planId" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </details>
    </section>

    <!-- AI Assistant Chat Tab -->
    <section id="tab-chat" data-tab-panel hidden>
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <div>
                    <h3 class="h5 mb-0">ü§ñ AI Travel Assistant</h3>
                    <small class="text-white-50">Ask questions or request changes to your itinerary</small>
                </div>
                <div class="btn-group" role="group">
                    <button type="button" class="btn btn-sm btn-light" id="undoBtn" title="Undo last change" disabled>
                        ‚Ü∂ Undo
                    </button>
                    <button type="button" class="btn btn-sm btn-light" id="redoBtn" title="Redo change" disabled>
                        ‚Ü∑ Redo
                    </button>
                </div>
            </div>
            <div class="card-body p-0">
                <!-- Chat messages container -->
                <div id="chatMessages" class="p-3" style="height: 400px; overflow-y: auto; background-color: #f8f9fa;">
                    <div class="alert alert-info mb-2">
                        <strong>üëã Welcome!</strong> I can help you modify your travel plan. Try asking:
                        <ul class="mb-0 mt-2">
                            <li>"Add a museum visit on day 2"</li>
                            <li>"Change day 3 lunch to a local restaurant"</li>
                            <li>"What are the best activities for families?"</li>
                        </ul>
                    </div>
                </div>
                
                <!-- Diff Preview Panel (hidden by default) -->

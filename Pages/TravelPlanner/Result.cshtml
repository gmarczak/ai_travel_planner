    <script>
        (function() {
            if (window.innerWidth >= 992) return; // Desktop only uses sidebar
            
            const bottomSheet = document.getElementById('planOffcanvas');
            if (!bottomSheet) return;
            
            const handle = bottomSheet.querySelector('.bottom-sheet-handle-container');
            let startY = 0;
            let currentY = 0;
            let isDragging = false;
            
            // Initialize bottom sheet as visible but collapsed
            const bsOffcanvas = new bootstrap.Offcanvas(bottomSheet, {
                backdrop: false,
                scroll: true
            });
            
            // Auto-show on map tab switch (collapsed state)
            document.addEventListener('click', function(ev) {
                const tabBtn = ev.target.closest('[data-tab="map"]');
                if (tabBtn && window.innerWidth < 992) {
                    setTimeout(() => {
                        if (!bottomSheet.classList.contains('show')) {
                            bsOffcanvas.show();
                        }
                    }, 100);
                }
            });
            
            // Drag functionality
            if (handle) {
                handle.addEventListener('touchstart', handleTouchStart, { passive: true });
                handle.addEventListener('mousedown', handleMouseDown);
            }
            
            function handleTouchStart(e) {
                startY = e.touches[0].clientY;
                isDragging = true;
                bottomSheet.style.transition = 'none';
            }
            
            function handleMouseDown(e) {
                startY = e.clientY;
                isDragging = true;
                bottomSheet.style.transition = 'none';
                document.addEventListener('mousemove', handleMouseMove);
                document.addEventListener('mouseup', handleMouseUp);
            }
            
            function handleMouseMove(e) {
                if (!isDragging) return;
                currentY = e.clientY;
                const deltaY = currentY - startY;
                
                if (deltaY > 0) { // Only allow dragging down
                    bottomSheet.style.transform = `translateY(${deltaY}px)`;
                }
            }
            
            function handleMouseUp() {
                if (!isDragging) return;
                isDragging = false;
                bottomSheet.style.transition = '';
                document.removeEventListener('mousemove', handleMouseMove);
                document.removeEventListener('mouseup', handleMouseUp);
                
                const deltaY = currentY - startY;
                if (deltaY > 100) {
                    bsOffcanvas.hide();
                } else {
                    bottomSheet.style.transform = '';
                }
            }
            
            document.addEventListener('touchmove', function(e) {
                if (!isDragging) return;
                currentY = e.touches[0].clientY;
                const deltaY = currentY - startY;
                
                if (deltaY > 0) {
                    bottomSheet.style.transform = `translateY(${deltaY}px)`;
                }
            }, { passive: true });
            
            document.addEventListener('touchend', function() {
                if (!isDragging) return;
                isDragging = false;
                bottomSheet.style.transition = '';
                
                const deltaY = currentY - startY;
                if (deltaY > 100) {
                    bsOffcanvas.hide();
                } else {
                    bottomSheet.style.transform = '';
                }
            });
        })();
    </script>

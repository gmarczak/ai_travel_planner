@page
@model project.Pages.TravelPlanner.SavedPlansModel
@{
    ViewData["Title"] = "Saved travel plans";
}

<div class="container-fluid px-2 px-md-3">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10 col-xl-8">
            <h1 class="fs-2 fs-md-1 mb-3 mb-md-4">Saved travel plans</h1>

            @if (Model.SavedPlans.Count == 0)
            {
                <div class="alert alert-info mb-3">You don't have any saved travel plans yet.</div>
            }
            else
            {
                <div class="row g-2 g-md-3 mb-3 mb-md-4">
                    @foreach (var item in Model.SavedPlans)
                    {
                        var plan = item.Plan;
                        var id = item.Id;
                        <div class="col-12 col-md-6">
                            <div class="card h-100">
                                    @if (!string.IsNullOrEmpty(plan.DestinationImageUrl))
                                    {
                                        <img src="@plan.DestinationImageUrl" class="card-img-top" alt="@plan.Destination" style="height: 180px; object-fit: cover;" loading="lazy" />
                                    }
                                <div class="card-body p-3">
                                    <h5 class="card-title fs-6 mb-2">@plan.Destination</h5>
                                    <p class="card-text small text-muted mb-2">
                                        <span class="d-block d-sm-inline">ðŸ“… @plan.StartDate.ToString("MMM d") -
                                            @plan.EndDate.ToString("MMM d, yyyy")</span>
                                        <span class="d-block d-sm-inline ms-sm-2">ðŸ‘¥ @plan.NumberOfTravelers
                                            traveler@(plan.NumberOfTravelers == 1 ? "" : "s")</span>
                                        <span class="d-block d-sm-inline ms-sm-2">ðŸ’° $@plan.Budget</span>
                                    </p>
                                    <div class="d-flex gap-2 flex-wrap">
                                        <a asp-page="Result" asp-route-id="@id"
                                            class="btn btn-sm btn-primary flex-fill flex-sm-grow-0"
                                            style="min-height: 38px;">View</a>
                                        <form method="post" asp-page-handler="Remove" asp-route-id="@id"
                                            class="flex-fill flex-sm-grow-0">
                                            <button type="submit" class="btn btn-sm btn-danger w-100"
                                                style="min-height: 38px;">Remove</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }

            <a asp-page="Index" class="btn btn-secondary" style="min-height: 44px;">Back to planner</a>
        </div>
    </div>
</div>
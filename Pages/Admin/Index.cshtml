@page
@model AdminIndexModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

@if (!User.Identity?.IsAuthenticated ?? true)
{
    <div class="container py-5 text-center">
        <h2>Unauthorized</h2>
        <p class="text-muted">You must be logged in to access this page.</p>
        <a href="/Account/Login" class="btn btn-primary">Login</a>
    </div>
    return;
}

@if (!(Model.IsAdmin))
{
    <div class="container py-5 text-center">
        <h2>Forbidden</h2>
        <p class="text-muted">You do not have permission to view the admin dashboard.</p>
    </div>
    return;
}

<div class="container py-4">
    <h1 class="mb-4">Admin Dashboard</h1>
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Users</h5>
                    <p class="display-6 fw-bold">@Model.UserCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Travel Plans</h5>
                    <p class="display-6 fw-bold">@Model.PlanCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">AI Cache Entries</h5>
                    <p class="display-6 fw-bold">@Model.CacheCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Images Cached</h5>
                    <p class="display-6 fw-bold">@Model.ImageCount</p>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5" />
    <h3>Recent Activity (placeholder)</h3>
    <p class="text-muted">Implement logs and recent actions later.</p>
</div>

@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@inject Microsoft.AspNetCore.Identity.SignInManager<project.Models.ApplicationUser> SignInManager
@using System.Globalization
@{
    var currentPath = Context?.Request?.Path.Value ?? string.Empty;
    var returnUrl = (Context?.Request?.Path.Value ?? "/") + (Context?.Request?.QueryString.Value ?? string.Empty);
    var htmlLang = "en";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AI Travel Planner</title>
    <link rel="dns-prefetch" href="https://maps.googleapis.com">
    <link rel="dns-prefetch" href="https://maps.gstatic.com">
    <link rel="preconnect" href="https://maps.googleapis.com" crossorigin>
    <link rel="preconnect" href="https://maps.gstatic.com" crossorigin>
    <link rel="icon" type="image/x-icon" href="~/unnamed1.jpg" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/css/custom-theme.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/travel-form.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/offcanvas-styles.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    @await RenderSectionAsync("Styles", required: false)
    <style>
        html {
            height: 100%;
        }

        body {
            min-height: 100%;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
        }

        .site-footer {
            background-color: #f8f9fa;
            color: #212529;
        }

        .site-footer h6,
        .site-footer p,
        .site-footer span {
            color: #212529;
        }

        .site-footer a {
            color: #495057 !important;
        }

        .site-footer hr {
            border-color: rgba(0, 0, 0, 0.1);
        }

        .container {
            max-width: 1100px;
        }

        nav[role="tablist"] button[aria-selected="true"] {
            font-weight: 600;
        }

        .toast-container {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 1080;
        }
    </style>
</head>

<body>
    @{
        var currentPath = Context?.Request?.Path.Value ?? string.Empty;
        var returnUrl = (Context?.Request?.Path.Value ?? "/") + (Context?.Request?.QueryString.Value ?? string.Empty);
        var uiCulture = System.Threading.Thread.CurrentThread.CurrentUICulture?.Name ?? "en-US";
        var htmlLang = "en";
    }
    <header class="border-bottom bg-primary fixed-top shadow-sm">
        <nav class="container d-flex align-items-center justify-content-between py-2 px-3">
            <a href="/" class="text-decoration-none fw-bold text-white d-flex align-items-center gap-2"
                style="font-size:1.4rem; letter-spacing:0.5px;">
                <img src="/unnamed1.jpg" alt="AI Travel Planner Logo"
                    style="height:32px;width:32px;object-fit:cover;border-radius:6px;box-shadow:0 2px 8px rgba(0,0,0,0.08);background:#fff;"
                    class="me-2 d-none d-md-block" />
                <span class="d-none d-sm-inline">AI Travel Planner</span>
                <span class="d-inline d-sm-none">Travel AI</span>
            </a>

            <!-- Desktop nav -->
            <ul class="nav gap-2 align-items-center d-none d-md-flex" style="margin-bottom:0;">
                <li class="nav-item"><a href="/"
                        class="nav-link text-white @(currentPath == "/" ? "fw-bold" : null)">Home</a></li>
                <li class="nav-item"><a href="/TravelPlanner"
                        class="nav-link text-white @(currentPath.StartsWith("/TravelPlanner") && !currentPath.StartsWith("/TravelPlanner/SavedPlans") ? "fw-bold" : null)">Plan
                        Trip</a></li>
                <li class="nav-item"><a href="/TravelPlanner/SavedPlans"
                        class="nav-link text-white @(currentPath.StartsWith("/TravelPlanner/SavedPlans") ? "fw-bold" : null)">Saved
                        Trips</a></li>
                @if (SignInManager.IsSignedIn(User))
                {
                    var email = User?.Identity?.Name ?? "Account";
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white d-flex align-items-center" href="#" id="userDropdown"
                            role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                                class="bi bi-person-circle me-1" viewBox="0 0 16 16">
                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                <path fill-rule="evenodd"
                                    d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                            </svg>
                            <span class="align-middle">@email</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="/TravelPlanner/SavedPlans">My Plans</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <form method="post" asp-page="/Account/Logout" class="m-0">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item"><a href="/Account/Login" class="btn btn-outline-light btn-sm px-3 me-2">Login</a>
                    </li>
                    <li class="nav-item"><a href="/Account/Register" class="btn btn-light btn-sm px-3">Sign Up</a></li>
                }
            </ul>

            <!-- Mobile hamburger menu -->
            <button class="btn btn-link text-white d-md-none p-0" type="button" data-bs-toggle="offcanvas"
                data-bs-target="#mobileMenu" aria-controls="mobileMenu" aria-label="Toggle navigation">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-list"
                    viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                        d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
                </svg>
            </button>
        </nav>

        <!-- Mobile offcanvas menu -->
        <div class="offcanvas offcanvas-end" tabindex="-1" id="mobileMenu" aria-labelledby="mobileMenuLabel">
            <div class="offcanvas-header bg-primary text-white">
                <h5 class="offcanvas-title" id="mobileMenuLabel">Menu</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="nav flex-column gap-2">
                    <li class="nav-item"><a href="/"
                            class="nav-link @(currentPath == "/" ? "fw-bold text-primary" : "text-dark")">Home</a></li>
                    <li class="nav-item"><a href="/TravelPlanner"
                            class="nav-link @(currentPath.StartsWith("/TravelPlanner") && !currentPath.StartsWith("/TravelPlanner/SavedPlans") ? "fw-bold text-primary" : "text-dark")">Plan
                            Trip</a></li>
                    <li class="nav-item"><a href="/TravelPlanner/SavedPlans"
                            class="nav-link @(currentPath.StartsWith("/TravelPlanner/SavedPlans") ? "fw-bold text-primary" : "text-dark")">Saved
                            Trips</a></li>
                    <li class="nav-item mt-3 pt-3 border-top">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            var email = User?.Identity?.Name ?? "Account";
                            <div class="d-flex align-items-center mb-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
                                    class="bi bi-person-circle me-2" viewBox="0 0 16 16">
                                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                    <path fill-rule="evenodd"
                                        d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                                </svg>
                                <span class="fw-bold">@email</span>
                            </div>
                            <a href="/TravelPlanner/SavedPlans" class="btn btn-outline-primary w-100 mb-2">My Plans</a>
                            <form method="post" asp-page="/Account/Logout" class="m-0">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger w-100">Logout</button>
                            </form>
                        }
                        else
                        {
                            <a href="/Account/Login?returnUrl=@returnUrl" class="btn btn-primary w-100 mb-2">Login</a>
                            <a href="/Account/Register" class="btn btn-outline-primary w-100">Sign Up</a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </header>

    <main role="main" class="container pt-5 mt-3">
        @* Display TempData messages as Bootstrap alerts *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-check-circle-fill me-2" viewBox="0 0 16 16">
                    <path
                        d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                </svg>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-exclamation-triangle-fill me-2" viewBox="0 0 16 16">
                    <path
                        d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-info-circle-fill me-2" viewBox="0 0 16 16">
                    <path
                        d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                </svg>
                @TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-exclamation-circle-fill me-2" viewBox="0 0 16 16">
                    <path
                        d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                </svg>
                @TempData["WarningMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="border-top mt-5 py-4 site-footer">
        <div class="container footer-inner">
            <div class="row">
                <div class="col-md-6 mb-3 mb-md-0">
                    <h6 class="text-primary fw-bold mb-2">AI Travel Planner</h6>
                    <p class="small text-muted mb-0">Plan your perfect trip with AI-powered recommendations</p>
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                    <h6 class="text-primary fw-bold mb-2 small">Quick Links</h6>
                    <ul class="list-unstyled small">
                        <li><a href="/" class="text-decoration-none text-muted">Home</a></li>
                        <li><a href="/TravelPlanner" class="text-decoration-none text-muted">Plan Trip</a></li>
                        <li><a href="/TravelPlanner/SavedPlans" class="text-decoration-none text-muted">Saved
                                Trips</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="text-primary fw-bold mb-2 small">Legal</h6>
                    <ul class="list-unstyled small">
                        <li><a href="/Privacy" class="text-decoration-none text-muted">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-3">
            <div class="d-flex justify-content-between align-items-center small">
                <span>&copy; 2025 AI Travel Planner. All rights reserved.</span>
                <span>Powered by AI</span>
            </div>
        </div>
    </footer>

    <div class="toast-container" id="globalToasts"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="~/js/toast-helper.js" asp-append-version="true"></script>
    <script src="~/js/i18n-helper.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/maps.js" asp-append-version="true"></script>
    <script src="~/js/results-map.js" asp-append-version="true"></script>
    <script src="~/js/tabs.js" asp-append-version="true"></script>

    @{
        var mapsKey = Configuration["GoogleMaps:ApiKey"];
    }
    @if (!string.IsNullOrWhiteSpace(mapsKey))
    {
        <!-- Google Maps API - Standard loading -->
        <script>
            console.log('🗺️ Loading Google Maps API (standard mode)...');
            // Store original callback from maps.js
            const originalGmapsOnLoad = window.__gmapsOnLoad;

            window.__gmapsOnLoad = function () {
                console.log('✓ Google Maps API loaded successfully');
                window.googleMapsReady = true;

                // Call original callback from maps.js
                if (originalGmapsOnLoad && typeof originalGmapsOnLoad === 'function') {
                    originalGmapsOnLoad();
                }

                document.dispatchEvent(new Event('google-maps-loaded'));
            };
        </script>
        <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=@mapsKey&libraries=places,geometry&callback=__gmapsOnLoad&loading=async"></script>
        <script async defer
            src="https://unpkg.com/@@google/markerclustererplus@@1.0.3/dist/markerclustererplus.min.js"></script>
    }
    else
    {
        <div class="container alert alert-warning my-3">Google Maps key not found. Add GoogleMaps__ApiKey to your
            environment or .env.</div>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
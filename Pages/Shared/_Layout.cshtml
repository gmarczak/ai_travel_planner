@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@inject Microsoft.AspNetCore.Identity.SignInManager<project.Models.ApplicationUser> SignInManager
@using System.Globalization
@{
    var currentPath = Context?.Request?.Path.Value ?? string.Empty;
    var returnUrl = (Context?.Request?.Path.Value ?? "/") + (Context?.Request?.QueryString.Value ?? string.Empty);
    var htmlLang = CultureInfo.CurrentUICulture.Name ?? "en";
}
<!DOCTYPE html>
<html lang="@htmlLang">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AI Travel Planner</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="~/css/custom-theme.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/travel-form.css" rel="stylesheet" asp-append-version="true" />
    <style>
        html {
            height: 100%;
        }

        body {
            min-height: 100%;
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
        }

        .container {
            max-width: 1100px;
        }

        nav[role="tablist"] button[aria-selected="true"] {
            font-weight: 600;
        }

        .toast-container {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 1080;
        }
    </style>
</head>

<body>
    @{
        var currentPath = Context?.Request?.Path.Value ?? string.Empty;
        var returnUrl = (Context?.Request?.Path.Value ?? "/") + (Context?.Request?.QueryString.Value ?? string.Empty);
        var uiCulture = System.Threading.Thread.CurrentThread.CurrentUICulture?.Name ?? "en-US";
        var htmlLang = CultureInfo.CurrentUICulture.Name ?? "en";
    }
    <header class="border-bottom mb-3 bg-primary">
        <nav class="container d-flex align-items-center justify-content-between py-2">
            <a href="/" class="text-decoration-none fw-bold text-white d-flex align-items-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor"
                    class="bi bi-geo-alt me-2" viewBox="0 0 16 16">
                    <path
                        d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z" />
                    <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                </svg>
                AI Travel Planner
            </a>

            <ul class="nav gap-2 align-items-center">
                <li class="nav-item"><a href="/"
                        class="nav-link text-white @(currentPath == "/" ? "fw-bold" : null)">Home</a></li>
                <li class="nav-item"><a href="/TravelPlanner"
                        class="nav-link text-white @(currentPath.StartsWith("/TravelPlanner") && !currentPath.StartsWith("/TravelPlanner/SavedPlans") ? "fw-bold" : null)">Plan
                        Trip</a></li>
                <li class="nav-item"><a href="/TravelPlanner/SavedPlans"
                        class="nav-link text-white @(currentPath.StartsWith("/TravelPlanner/SavedPlans") ? "fw-bold" : null)">Saved
                        Trips</a></li>
                <li class="nav-item"><a href="/Privacy"
                        class="nav-link text-white @(currentPath.StartsWith("/Privacy") ? "fw-bold" : null)">Privacy</a>
                </li>


                @if (SignInManager.IsSignedIn(User))
                {
                    var email = User?.Identity?.Name ?? "Account";
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor"
                                class="bi bi-person-circle me-1" viewBox="0 0 16 16">
                                <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                <path fill-rule="evenodd"
                                    d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                            </svg>
                            @email
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="/TravelPlanner/SavedPlans">My Plans</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <form method="post" asp-page="/Account/Logout" class="m-0">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="dropdown-item">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item"><a href="/Account/Login" class="nav-link text-white">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-box-arrow-in-right me-1" viewBox="0 0 16 16">
                                <path fill-rule="evenodd"
                                    d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z" />
                                <path fill-rule="evenodd"
                                    d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                            </svg>
                            Login</a></li>
                    <li class="nav-item"><a href="/Account/Register" class="btn btn-light btn-sm">Sign Up</a></li>
                }
            </ul>
        </nav>
    </header>

    <main class="container">
        @* Display TempData messages as Bootstrap alerts *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-check-circle-fill me-2" viewBox="0 0 16 16">
                    <path
                        d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
                </svg>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-exclamation-triangle-fill me-2" viewBox="0 0 16 16">
                    <path
                        d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                </svg>
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-info-circle-fill me-2" viewBox="0 0 16 16">
                    <path
                        d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
                </svg>
                @TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        @if (TempData["WarningMessage"] != null)
        {
            <div class="alert alert-warning alert-dismissible fade show mt-3" role="alert">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                    class="bi bi-exclamation-circle-fill me-2" viewBox="0 0 16 16">
                    <path
                        d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM8 4a.905.905 0 0 0-.9.995l.35 3.507a.552.552 0 0 0 1.1 0l.35-3.507A.905.905 0 0 0 8 4zm.002 6a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                </svg>
                @TempData["WarningMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="border-top mt-5 py-4 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-3 mb-md-0">
                    <h6 class="text-primary fw-bold mb-2">AI Travel Planner</h6>
                    <p class="small text-muted mb-0">Plan your perfect trip with AI-powered recommendations</p>
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                    <h6 class="text-primary fw-bold mb-2 small">Quick Links</h6>
                    <ul class="list-unstyled small">
                        <li><a href="/" class="text-decoration-none text-muted">Home</a></li>
                        <li><a href="/TravelPlanner" class="text-decoration-none text-muted">Plan Trip</a></li>
                        <li><a href="/TravelPlanner/SavedPlans" class="text-decoration-none text-muted">Saved Trips</a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6 class="text-primary fw-bold mb-2 small">Legal</h6>
                    <ul class="list-unstyled small">
                        <li><a asp-page="/Privacy" class="text-decoration-none text-muted">Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
            <hr class="my-3">
            <div class="d-flex justify-content-between align-items-center small text-muted">
                <span>&copy; 2025 AI Travel Planner. All rights reserved.</span>
                <span>Powered by AI</span>
            </div>
        </div>
    </footer>

    <div class="toast-container" id="globalToasts"></div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/maps.js" asp-append-version="true"></script>
    <script src="~/js/results-map.js" asp-append-version="true"></script>
    <script src="~/js/tabs.js" asp-append-version="true"></script>

    @{
        var mapsKey = Configuration["GoogleMaps:ApiKey"];
    }
    @if (!string.IsNullOrWhiteSpace(mapsKey))
    {
        <!-- Load Google Maps dynamically by fetching key from the config endpoint to avoid embedding the key in static files -->
        <script>
            (async function () {
                try {
                    const res = await fetch('/__config/maps', { cache: 'no-store' });
                    if (!res.ok) throw new Error('config fetch failed');
                    const cfg = await res.json();
                    const key = cfg?.googleMapsApiKey;
                    if (!key) { console.warn('Google Maps API key not configured.'); return; }
                    const s = document.createElement('script'); s.async = true; s.defer = true;
                    s.src = `https://maps.googleapis.com/maps/api/js?key=${encodeURIComponent(key)}&libraries=places&callback=__gmapsOnLoad&loading=async`;
                    document.head.appendChild(s);
                } catch (e) { console.warn('Failed to load Google Maps API key', e); }
            })();
        </script>
        <script src="https://unpkg.com/@@google/markerclustererplus@1.0.3/dist/markerclustererplus.min.js"></script>
    }
    else
    {
        <div class="container alert alert-warning my-3">Google Maps key not found. Add GoogleMaps__ApiKey to your
            environment or .env.</div>
    }

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
@page
@model project.Pages.IndexModel
@{
    ViewData["Title"] = "AI Travel Planner - Home";
}

<!-- Hero Section - Desktop/Responsive -->
<section class="hero-section position-relative mb-4"
    style="background-image: url('/img/hero-bg.jpg'); background-size: cover; background-position: center; min-height: 340px;">
    <div class="position-absolute top-0 start-0 w-100 h-100" style="background: rgba(0,128,0,0.55); z-index:1;"></div>
    <div class="container py-5 position-relative" style="z-index:2;">
        <h1 class="display-4 fw-bold text-white mb-3" style="text-shadow:0 2px 8px rgba(0,0,0,0.18); line-height:1.2;">Intelligent Travel Planning</h1>
        <p class="lead fs-4 text-white mb-4" style="text-shadow:0 1px 4px rgba(0,0,0,0.12);">Create personalized travel itineraries powered by AI</p>
        <a asp-page="/TravelPlanner/Index" class="btn btn-success btn-lg px-5 py-3 shadow w-100 w-md-auto" style="font-size:1.15rem; min-height:48px; transition: box-shadow .2s, transform .2s;">Start Planning Your Trip</a>
    </div>
</section>

<!-- Features Section -->
<div class="row g-4 mb-4">
    <div class="col-12">
        <div class="card h-100 border-0 shadow mb-3 mb-md-0" style="box-shadow:0 .125rem .25rem rgba(0,0,0,.075) !important;">
            <div class="card-body text-center p-4">
                <i class="bi bi-geo-alt fs-1 text-success mb-3"></i>
                <h3 class="h5 mb-2">Personalized Itineraries</h3>
                <p class="text-muted small">Create custom travel plans based on your preferences, budget, and interests.</p>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card h-100 border-0 shadow mb-3 mb-md-0" style="box-shadow:0 .125rem .25rem rgba(0,0,0,.075) !important;">
            <div class="card-body text-center p-4">
                <i class="bi bi-map fs-1 text-success mb-3"></i>
                <h3 class="h5 mb-2">Interactive Maps</h3>
                <p class="text-muted small">Visualize your travel plans with integrated maps showing your destinations.</p>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card h-100 border-0 shadow" style="box-shadow:0 .125rem .25rem rgba(0,0,0,.075) !important;">
            <div class="card-body text-center p-4">
                <i class="bi bi-lightning fs-1 text-success mb-3"></i>
                <h3 class="h5 mb-2">AI-Powered Recommendations</h3>
                <p class="text-muted small">Get intelligent suggestions for accommodations, activities and transportation.</p>
            </div>
        </div>
    </div>
</div>



<!-- Popular Trips Section -->
<section class="mb-5">
    <h2 class="h3 fw-bold mb-4 text-success">Most Popular Trips</h2>
    @if (Model.TopDestinations != null && Model.TopDestinations.Count > 0)
    {
        <div class="row g-4">
            @foreach (var dest in Model.TopDestinations)
            {
                <div class="col-12">
                    <div class="card h-100 border-0 shadow mb-3" style="box-shadow:0 .125rem .25rem rgba(0,0,0,.075) !important;">
                        <img src="/img/popular-trip.jpg" class="card-img-top" alt="Popular trip image" style="object-fit:cover; height:120px; background:#e9ecef;">
                        <div class="card-body p-3 d-flex flex-column">
                            <h5 class="card-title mb-1">@dest</h5>
                            <p class="card-text text-muted small mb-2">Popular choice from saved plans</p>
                            <a asp-page="/TravelPlanner/Index" asp-route-destination="@dest" class="btn btn-outline-success btn-sm mt-auto w-100">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">No popular trips yet — create and save plans to populate this list.</p>
    }
</section>
@page
@model project.Pages.Account.RegisterModel
@{
    ViewData["Title"] = Localizer["registerTitle"];
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h2 class="card-title text-center mb-4">@Localizer["createAccountTitle"]</h2>
                <p class="text-muted text-center mb-4">@Localizer["joinDescription"]</p>

                <form method="post">
                    <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label">@Localizer["email"]</label>
                        <input asp-for="Input.Email" class="form-control" placeholder="your@email.com" />
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.FullName" class="form-label">@Localizer["fullName"]</label>
                        <input asp-for="Input.FullName" class="form-control" placeholder="@Localizer["fullNamePlaceholder"]" />
                        <span asp-validation-for="Input.FullName" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Password" class="form-label">@Localizer["password"]</label>
                        <input asp-for="Input.Password" class="form-control" placeholder="••••••••" />
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        <div class="form-text">@Localizer["minimum6Chars"]</div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Input.ConfirmPassword" class="form-label">@Localizer["confirmPassword"]</label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="••••••••" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">@Localizer["registerButton"]</button>
                    </div>

                    <hr class="my-4">

                    <p class="text-center mb-0">
                        @Localizer["alreadyHaveAccount"] <a asp-page="Login" asp-route-returnUrl="@Model.ReturnUrl">@Localizer["loginHere"]</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}